<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_pagebuilderextend_pagebuilderreadmore_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form.pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Page Builder Read More</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form.pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form</namespace>
    </settings>
    <dataSource name="pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_pagebuilderextend_pagebuilderreadmore_mobile_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="readmore_fieldset" sortOrder="15" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <field name="desktop_line_clamp_field" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">3</item>
                    <item name="breakpoints" xsi:type="array">
                        <item name="mobile" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Mobile Line Clamp</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
                <tooltip>
                    <description translate="true">
                        <![CDATA[
                        <p>Style changes will only affect this breakpoint - Change view to adjust for Desktop</p>
                        ]]>
                    </description>
                </tooltip>
            </settings>
        </field>
    </fieldset>
</form>

